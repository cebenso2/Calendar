<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cbcb.chris.calendar.EventActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:id="@+id/EventName"
        android:gravity="center"
        android:hint="Name of Event"
        android:textSize="10pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeTitle"
        android:layout_below="@+id/EventName"
        android:text="Time"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeLayout"
        android:layout_below="@+id/timeTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="@color/bright_green"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            android:id="@+id/setTimefab"
            android:layout_alignParentRight="true"
            android:onClick="setTime"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/textClock"
            android:text="12:00 AM"
            android:layout_centerVertical="true"
            android:onClick="setTime"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventTypeTitle"
        android:layout_below="@id/timeLayout"
        android:text="Repetition"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventTypeLayout"
        android:layout_below="@+id/eventTypeTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="@color/bright_green"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/setEventTypeFab"
            android:layout_alignParentRight="true"
            android:onClick="setRepetition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/event_type"
            android:text="Weekly"
            android:onClick="setRepetition"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quantTitle"
        android:layout_below="@id/eventTypeLayout"
        android:text="Quantitative Fields" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quant_field1"
        android:layout_below="@+id/quantTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin">


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="@color/bright_green"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/remove_quant"
            android:layout_alignParentRight="true"
            android:onClick="setRepetition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/remove_quant"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:textSize="25dp"
            android:id="@+id/quanttext1"
            android:text="1. Bench Press - Reps"
            android:onClick="setRepetition"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addQuantLayout"
        android:layout_below="@+id/quant_field1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="@color/bright_green"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/add_quant_field"
            android:layout_alignParentRight="true"
            android:onClick="setRepetition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:id="@+id/addquanttext"
            android:text="Add Field"
            android:onClick="setRepetition"
            android:layout_centerVertical="true"/>


    </RelativeLayout>



    <Button
        android:text="Add Event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ton2"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/bright_green"
        android:onClick="addEventToDB"/>




</RelativeLayout>
